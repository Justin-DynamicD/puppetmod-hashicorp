# Setup data dir
data_dir = "/opt/nomad/data"
datacenter = "<%= @nomad_datacenter %>"

# Enable the client
client {
  enabled = true
  options {
    "driver.raw_exec.enable" = "1"
  }
  meta {
    "tier" = "<%= @nomad_metatags %>"
  }
}

# define Consul connection
consul {
  address = "127.0.0.1:8500"
  token   = "{{ with secret "secret/consul/agent_token" }}{{ .Data.value }}{{ end }}"
}
